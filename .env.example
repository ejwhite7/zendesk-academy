# Zendesk Academy Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ===== REQUIRED CONFIGURATION =====

# Supabase Configuration
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Anthropic Claude API
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Authentication Configuration
# Generate a secure random string for production
NEXTAUTH_SECRET=your_nextauth_secret_change_in_production
NEXTAUTH_URL=http://localhost:3000

# ===== OPTIONAL CONFIGURATION =====

# Zendesk Integration (Required for Zendesk features)
# Get these from your Zendesk admin panel
ZENDESK_API_TOKEN=your_zendesk_api_token
ZENDESK_EMAIL=your_zendesk_email@domain.com

# Error Monitoring (Optional but recommended for production)
SENTRY_DSN=https://your-sentry-dsn@sentry.io
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=zendesk-academy
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Application Branding
NEXT_PUBLIC_APP_NAME="Zendesk Academy"
NEXT_PUBLIC_APP_DESCRIPTION="Transform Zendesk KB into interactive courses"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===== FEATURE FLAGS =====

# Core Features
ENABLE_ANALYTICS=true
ENABLE_EMBEDDINGS=true
ENABLE_WEBHOOKS=true
ENABLE_AUTO_GENERATION=true

# Integration Features
ENABLE_SLACK_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=true

# ===== PRODUCTION CONFIGURATION =====

# Deployment (Vercel)
VERCEL_TOKEN=your_vercel_token

# Email Service (for notifications)
RESEND_API_KEY=your_resend_api_key

# Webhook Security
WEBHOOK_SECRET=your_webhook_secret_for_zendesk

# Cloudflare (optional for custom domains and security)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===== DEVELOPMENT FLAGS =====

# Environment
NODE_ENV=development
NEXT_PUBLIC_VERCEL_ENV=development

# Debug Flags (set to true for verbose logging)
DEBUG_API=false
DEBUG_AUTH=false
DEBUG_CLAUDE=false
DEBUG_ZENDESK=false